<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enterprise Details</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
      display: flex;
      justify-content: center;
      /* align-items: center; */
      height: 100vh;
    }

    table {
      width: 80%;
      border-collapse: collapse;
      margin: 20px auto;
      background-color: #fff;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #4CAF50;
      color: white;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    tr:hover {
      background-color: #e0e0e0;
    }
    
    th, td {
      text-align: center;
    }

    .logo {
      max-width: 100px;
      max-height: 50px;
    }
  </style>
</head>
<body>
  <div>
    <button onclick="window.location.href='/createEnterprise'">Create Enterprise </button>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Logo</th>
          <th>Employee Count</th>
          <th>Manager Name</th>
          <th>Manager Email</th>
          <th>Manager Department</th>
        </tr>
      </thead>
      <tbody>
        <% enterprise.map(e => { %>
          <tr onclick="window.location.href='/enterpriselist/<%= e.id %>'" style="cursor: pointer;">
            <td><%= e.name %></td>
            <td><img src="<%= e.logo %>" alt="Logo" class="logo"></td>
            <td><%= e.employeeCount %></td>
            <td><%= e.manager.name %></td>
            <td><%= e.manager.email %></td>
            <td><%= e.manager.department %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
