<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
     

        .login-container {
            
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #555;
            /* Medium gray for label text */
        }

        input[type="text"],
        input[type="email"],
        input[type="number"],
        input[type="password"],
        select {
            width: 100%;
            /* Full width */
            padding: 10px;
            /* Padding for inputs */
            margin-bottom: 15px;
            /* Space below inputs */
            border: 1px solid #ccc;
            /* Light border */
            border-radius: 4px;
            /* Slightly rounded corners */
            box-sizing: border-box;
            /* Include padding in width */
        }

        button {
            width: 100%;
            /* Full width button */
            padding: 10px;
            /* Padding for button */
            background-color: #28a745;
            /* Green background */
            color: white;
            /* White text */
            border: none;
            /* Remove border */
            border-radius: 4px;
            /* Rounded corners */
            cursor: pointer;
            /* Pointer cursor on hover */
        }

        button:hover {
            background-color: #218838;
            /* Darker green on hover */
        }
    </style>
</head>

<body>
    <script>
        function getCookie(name) {
            const cookies = document.cookie.split('; ');
            const cookie = cookies.find(row => row.startsWith(name + '='));
            return cookie ? cookie.split('=')[1] : null; // Return the value or null if not found
        }

        const authToken = getCookie('authToken');
        console.log('---authToken--', authToken); // Check the value in the console
        if (authToken) {
            // Redirect to dashboard if token exists
            window.location.href = '/dashboard';
        }
    </script>
    <div class="login-container">
        <!-- <%= console.log("----enterprise",enterprise) %> -->
        <h1>Sign up</h1>
        <form action="/api/signup" method="POST">
            <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required><br />
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required><br />
            </div>
            <div>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required><br />
            </div>
            <div>
                <label for="role">Role:</label>
                <select id="role" name="role" required>
                    <option value="">Select an Role</option>
                    <% [0, 1, 2].forEach((role)=> { %>
                        <option value="<%= role %>">
                            <%= role===0 ? '0 (SuperAdmin)' : role===1 ? '1 (Admin)' : '2 (User)' %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <div>
                <label for="enterpriseId">Enterprise:</label>
                <select id="enterpriseId" name="enterpriseId" required>
                    <option value="">Select an Enterprise</option>
                    <% enterprise.map(e=> { %>
                        <option value="<%= e.id %>">
                            <%= e.name %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <button type="submit">Sign up</button>
        </form>
        <p>Already Have an Account ? <a href="/login">Login Here</a></p>
    </div>
</body>

</html>